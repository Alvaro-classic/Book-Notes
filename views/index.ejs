<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Notes</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <section id="body">
        <div class="container">
            <% if (locals.data) %>
            <div class="note">
                <% notes.forEach(note => { %>
                    <img class="cover-book" src="<%= note.isbn_url %>" alt="book cover">
                    <p><%= note.summary_note %></p>
                    <p><%= note.rating %></p>
                <% }); %>
            </div>
        </div>
    </section>
</body>
</html>